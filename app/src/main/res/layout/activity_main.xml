<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_start_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="startThread"
        />

    <Button
        android:id="@+id/button_stop_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        app:layout_constraintTop_toBottomOf="@id/button_start_thread"
        app:layout_constraintLeft_toLeftOf="@id/button_start_thread"
        app:layout_constraintRight_toRightOf="@id/button_start_thread"
        app:layout_goneMarginTop="20dp"
        android:onClick="stopThread"

        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="75dp"
        android:layout_height="47dp"
        app:layout_constraintBottom_toTopOf="@id/button_start_thread"
        app:layout_constraintLeft_toLeftOf="@id/button_start_thread"
        app:layout_constraintRight_toRightOf="@id/button_start_thread"
        app:layout_goneMarginTop="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>